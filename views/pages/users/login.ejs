<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body" style="background-color: rgb(244, 246, 235); border-radius: 15px;">
            <h1 class="text-center mb-3">
                <i class="fas fa-sign-in-alt"></i>Login
            </h1>
            <%- include ('../../partials/messages.ejs') %>
            <form action="/users/login" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        class="form-control"
                        placeholder="Enter Email"
                        style = "border-radius: 15px;"
                    />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input
                        type="password"
                        id="password"
                        name="password"
                        class="form-control"
                        placeholder="Enter Password"
                        style = "border-radius: 15px;"
                    />
                </div>
                <button type="submit" class="btn btn-primary btn-block" style=" background-color: rgb(177, 237, 145); border-radius: 15px; border-color: rgb(177, 237, 145);">
                    Login
                </button>
            </form>
            <p class="lead mt-4">
                No Account? <a href="/users/register">Register</a>
            </p>
        </div>
    </div>
</div>
